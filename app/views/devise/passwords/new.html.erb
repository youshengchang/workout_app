<h2 class="text-center">Forget Your Password?</h2>

<div class="row">
<div class="col-md-12">
<%= form_for(resource, as: resource_name, :html => {class: "form-horizontal", role: "form"}, url: password_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <div class="control-label col-md-3">
    <%= f.label :email %>
    </div>
    <div class="col-md-9">
    <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-3 col-md-9">
    <%= f.submit  "Send me reset password instructions", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <div class="col-md-offset-3 col-md-9">
    <%= render "devise/shared/links" %>
  </div>
</div>

</div>
</div>

